@model IEnumerable<CMCS.Models.ClaimViewModel>
@{
    ViewData["Title"] = "Manager Approval";
}

<h2>Manager Approval - Coordinator Approved Claims</h2>

@if (Model.Any(c => c.Status == "CoordinatorApproved"))
{
    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>Lecturer</th>
                <th>Month</th>
                <th>Year</th>
                <th>Total Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model.Where(c => c.Status == "CoordinatorApproved"))
            {
                <tr>
                    <td>@claim.LecturerName</td>
                    <td>@claim.Month</td>
                    <td>@claim.Year</td>
                    <td>@claim.TotalAmount.ToString("C")</td>
                    <td>
                        <a class="btn btn-success btn-sm" asp-action="ManagerApprove" asp-route-id="@claim.ClaimId">Approve</a>
                        <a class="btn btn-danger btn-sm" asp-action="ManagerReject" asp-route-id="@claim.ClaimId">Reject</a>
                        <a class="btn btn-outline-primary btn-sm ms-1" asp-action="ManagerAutoVerify" asp-route-id="@claim.ClaimId">Auto-Verify</a>
                        @{
                            var map = ViewData["ValidationResults"] as Dictionary<int, string[]>;
                            if (map != null && map.ContainsKey(claim.ClaimId) && map[claim.ClaimId].Any())
                            {
                                <div class="mt-2 text-warning small">@string.Join("; ", map[claim.ClaimId])</div>
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No claims pending manager approval.</p>
}
